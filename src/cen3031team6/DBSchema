CREATE TABLE USER
    (
        ID INT PRIMARY KEY AUTO_INCREMENT,
        NAME VARCHAR,
        PASSWORD VARCHAR
);

CREATE TABLE OneVOne_STATS
    (
       ID INT PRIMARY KEY AUTO_INCREMENT,
       PLAYERONE VARCHAR,
       PLAYERTWO VARCHAR,
       PLAYERONE_SCORE INT,
       PLAYERTWO_SCORE INT,
       DATE LONG
);

CREATE TABLE TOURN_STAT
    (
        ID INT PRIMARY KEY AUTO_INCREMENT,
        PLAYERONE VARCHAR,
        PLAYERTWO VARCHAR,
        PLAYERONE_SCORE INT,
        PLAYERTWO_SCORE INT,
        DATE LONG,
        TOURN_ID INT
);

CREATE TABLE TOURNAMENT
    (
        ID INT PRIMARY KEY AUTO_INCREMENT,
        NAME VARCHAR,
        START_DATE VARCHAR,
        START_TIME VARCHAR
);

CREATE TABLE PLAYER_TOURN
    (
        USER_ID INT,
        TOURN_ID INT
);
